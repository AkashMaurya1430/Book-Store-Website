  <!-- content -->

  <div class="card"
    style="width: 32rem;margin-left: 25rem;margin-top: 5rem; margin-bottom: 4rem;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
    <div class="card-body">
      <h5 class="card-title">Story Details</h5>
      <hr>
      <h6 class="card-subtitle mb-2 text-muted"></h6>
      <p class="card-text">
        <label style="font-weight: bold;" for="">Title</label><br>
        <input type="text" size="60" name="postTitle"><br><br>
        <label style="font-weight: bold;" for="">Description</label><br>
        <textarea name="postDescription" rows="9" cols="62"></textarea><br>
        <label style="font-weight: bold;" for="">ImageUrl</label><br><br>
        <input type="text" size="60" placeholder="Book Cover" name="postImageUrl"><br><br>
        <label style="font-weight: bold;" for="">Category</label><br>
      <div class="input-group mb-3" style="width: 60%; text-align: center;">
        <select class="custom-select" name="postCategory" id="inputGroupSelect01">
          <option selected>Types</option>
          <option value="Adventure">Adventure</option>
          <option value="Fantasy">Fantasy</option>
          <option value="Horror">Horror</option>
          <option value="Romance">Romance</option>
          <option value="Science Fiction">Science Fiction</option>
          <option value="Mystery">Mystery</option>

        </select>
      </div><br>
      <div class="input-group mb-3" style="width: 60%; text-align: center;">
        <select class="custom-select" name="postPrice" id="inputGroupSelect01">
          <option selected>Price</option>
          <option value="Free">Free</option>
          <option value="Paid">Paid</option>
        </select>
      </div>
      </p>
